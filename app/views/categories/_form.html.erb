<%= form_with model: @category, local: true do |f| %>

  <div class="mb-3">
    <%= f.label :name, "カテゴリ名", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "保存",
          class: "btn btn-success" %>
    <%= link_to "戻る",
          categories_path,
          class: "btn btn-outline-secondary" %>
  </div>

<% end %>
