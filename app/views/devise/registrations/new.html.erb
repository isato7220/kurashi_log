<div class="signup-page d-flex align-items-center justify-content-center">

  <div class="signup-card card shadow-lg border-0 p-4 p-md-5">

    <!-- タイトル -->
    <div class="text-center mb-5">
      <h2 class="fw-bold mb-2">はじめまして</h2>
      <p class="text-muted small mb-0">
        暮らしの記録を、今日から始めてみませんか？🌿
      </p>
    </div>

    <%= form_for(resource,
          as: resource_name,
          url: registration_path(resource_name)) do |f| %>

      <!-- 名前 -->
      <div class="mb-4">
        <%= f.label :name, "お名前", class: "form-label small text-muted" %>
        <%= f.text_field :name,
              class: "form-control form-control-lg rounded-3" %>
      </div>

      <!-- メール -->
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "form-label small text-muted" %>
        <%= f.email_field :email,
              class: "form-control form-control-lg rounded-3" %>
      </div>

      <!-- パスワード -->
      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "form-label small text-muted" %>
        <%= f.password_field :password,
              class: "form-control form-control-lg rounded-3" %>
      </div>

      <!-- 確認 -->
      <div class="mb-4">
        <%= f.label :password_confirmation, "確認用パスワード", class: "form-label small text-muted" %>
        <%= f.password_field :password_confirmation,
              class: "form-control form-control-lg rounded-3" %>
      </div>

      <!-- 登録 -->
      <div class="d-grid mb-4">
        <%= f.submit "アカウントを作成する",
              class: "btn btn-success btn-lg rounded-3" %>
      </div>

    <% end %>

    <!-- ログイン導線 -->
    <div class="text-center small text-muted">
      すでにアカウントをお持ちの方は
      <%= link_to "ログイン",
            new_session_path(resource_name),
            class: "text-decoration-none fw-semibold" %>
    </div>

  </div>
</div>
